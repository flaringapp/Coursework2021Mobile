<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BetterLinearLayout">
        <attr name="bll_children_spacing" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AspectRatioImageView">
        <attr name="iv_aspect_ratio" format="string" />
        <attr name="iv_aspect_ratio_base" format="enum">
            <enum name="width" value="0" />
            <enum name="height" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="AspectRatioFrameLayout">
        <attr name="frame_aspect_ratio" format="string" />
        <attr name="frame_aspect_ratio_base" format="enum">
            <enum name="width" value="0" />
            <enum name="height" value="1" />
        </attr>
    </declare-styleable>


    <declare-styleable name="AmountPickerView">
        <attr name="amountDefaultValue" format="integer" />
        <attr name="amountMinValue" format="integer" />
        <attr name="amountMaxValue" format="integer" />
        <attr name="amountTextMarginHorizontal" format="dimension" />
        <attr name="amountTextMarginVertical" format="dimension" />
        <attr name="amountTextColor" format="color" />
        <attr name="amountTextSize" format="dimension" />
        <attr name="amountTextFontFamily" format="reference" />
        <attr name="amountTextAppearance" format="reference" />
        <attr name="amountMinusButtonIcon" format="reference" />
        <attr name="amountPlusButtonIcon" format="reference" />
        <attr name="amountButtonSize" format="dimension" />
        <attr name="amountButtonPadding" format="dimension" />
        <attr name="amountButtonMargin" format="dimension" />
        <attr name="amountButtonTint" format="color" />
    </declare-styleable>

</resources>