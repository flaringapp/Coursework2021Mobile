<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Coursework" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_dark</item>
        <item name="colorOnSecondary">@color/gray</item>

        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <item name="android:windowBackground">@color/background</item>

        <item name="android:textViewStyle">@style/Text</item>

        <item name="android:buttonStyle">@style/Button</item>
        <item name="materialButtonStyle">@style/Button</item>

        <item name="android:indeterminateTint">@color/color_primary</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Accent">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Header">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.WithIcon">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Text.DialogTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.DialogAction">
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.NoDataMessage" parent="Text.Medium">
        <item name="android:layout_marginStart">42dp</item>
        <item name="android:layout_marginEnd">42dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="InputLayout">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/input</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="Input" parent="Text">
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textColorHint">@color/color_hint</item>
    </style>

    <style name="Input.InLayout">
        <item name="android:background">@null</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:minHeight">0dp</item>
        <item name="minHeight">0dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="backgroundTint">@null</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button.Big">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingStart">64dp</item>
        <item name="android:paddingEnd">64dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Button.Small">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Menu -->

    <style name="MenuItemLayoutRow">
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:clipChildren">false</item>
        <item name="bll_children_spacing">@dimen/menu_spacing</item>
    </style>

    <style name="MenuItemLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/bg_menu_item</item>
        <item name="android:elevation">8dp</item>
        <item name="bll_children_spacing">12dp</item>
    </style>

    <style name="MenuItemImage">
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="MenuItemText" parent="Text.Accent">
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>